# ========================================
# LOGGENERATOR API - PRODUCTION CONFIGURATION TEMPLATE
# ========================================
# ⚠️ IMPORTANT: Copy this file to .env.production and fill in your actual values
# ⚠️ NEVER commit .env.production to Git
# ⚠️ Generate strong passwords (min 16 characters)
# ========================================

# === APPLICATION SETTINGS ===
APP_NAME="Log Generator API"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_DAILY_DAYS=14

# === DATABASE SETTINGS ===
# ⚠️ REPLACE with your actual production database credentials
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=loggenerator
DB_USERNAME=loggenerator
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# === SESSION & SECURITY ===
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Broadcasting Configuration
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

CACHE_STORE=database
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# === MAIL SETTINGS ===
# ⚠️ REPLACE with your actual Brevo/Sendinblue credentials
MAIL_MAILER=brevo
MAIL_ENCRYPTION=tls
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=YOUR_BREVO_SMTP_USERNAME_HERE
MAIL_PASSWORD=YOUR_BREVO_SMTP_PASSWORD_HERE
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Brevo API Key
BREVO_API_KEY=YOUR_BREVO_API_KEY_HERE

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Admin Authentication Configuration
ADMIN_TOKEN_EXPIRATION_HOURS=4
